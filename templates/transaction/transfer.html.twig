{% extends 'base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
<h1>Liste des transactions</h1>
<ul>
    {% for transaction in transactions %}
        <li>
            <a href="{{ path('app_transaction_show', { id: transaction.id }) }}">
                {{ transaction.label }} - {{ transaction.amount }}€
            </a>
        </li>
    {% endfor %}
</ul>
<a href="{{ path('app_transaction_new') }}">Créer une nouvelle transaction</a>
<form action="{{ path('app_transaction') }}" method="post">
    <!-- Form content here -->
</form>
{% endblock %}
