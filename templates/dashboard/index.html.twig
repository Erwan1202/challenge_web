{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="dashboard-container">
    <h1>Tableau de bord</h1>

    <h2>Bienvenue {{ user.nom }} {{ user.prenom }}</h2>

    <!-- Section Mes Comptes -->
    <h3>Mes comptes</h3>
    <div class="comptes-container">
        {% for compte in comptes %}
            <div class="compte-card">
                <p>Numéro: {{ compte.numeroDeCompte }}</p>
                <p>Type: {{ compte.type }}</p>
                <p>Solde: {{ compte.solde }} €</p>
            </div>
        {% else %}
            <p>Vous n'avez aucun compte bancaire.</p>
        {% endfor %}
    </div>

    <!-- Section Transactions -->
    <h3>Transactions</h3>
    <div class="transactions-container">
        {% for transaction in transactions %}
            <div class="transaction-card">
                <p>Date: {{ transaction.dateHeure|date('d/m/Y H:i') }}</p>
                <p>Type: {{ transaction.type }}</p>
                <p>Montant: {{ transaction.montant }} €</p>
                <p>Statut: {{ transaction.statut }}</p>
            </div>
        {% else %}
            <p>Aucune transaction récente.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
